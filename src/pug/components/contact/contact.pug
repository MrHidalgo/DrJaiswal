          div
            .contact__form-field
              label
                input(type='tel' placeholder='Phone*')
        .contact__form-group.wow.animate__animated.animate__fadeInUp
          div
            .contact__form-field
              label
                input(type='email' placeholder='Email Address*')
          div
            .contact__form-field
              label
                select
                  option Procedure of Interest
                  option Procedure of Interest
        .contact__form-group.wow.animate__animated.animate__fadeInUp
          div
            .contact__form-field
              label
                select
                  option How did you hear about us?
                  option How did you hear about us?
          div.wow.animate__animated.animate__fadeInUp
            .contact__form-field
              label
                select
                  option Best time to reach you
                  option Best time to reach you
        .contact__form-field.wow.animate__animated.animate__fadeInUp
          label
            textarea(placeholder='How can we help you?')
        .contact__form-field.contact__form-field--btn.wow.animate__animated.animate__fadeInUp
          button(type='submit')
            span SUBMIT FORM
            i

